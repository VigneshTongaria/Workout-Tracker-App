<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/LeftRecycleViewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221">

    </androidx.recyclerview.widget.RecyclerView>
    <EditText
        android:id="@+id/add_exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Add Exercise"
        android:inputType="text"
        android:layout_margin="20sp"></EditText>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_exercise_button"
        android:maxHeight="30dp"
        android:layout_toRightOf="@+id/add_exercise_name"
        android:text="+"
        android:textSize="30dp"
        android:includeFontPadding="false"
        android:textAlignment="gravity"
        android:layout_margin="20sp"></Button>
</RelativeLayout>